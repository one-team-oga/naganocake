<div class="page_title mb-4 pl-3 pr-3">
    <%= @customer.first_name + @customer.last_name %>さんの会員詳細
</div>

<div class="container ml-3">
        <div class="row m-3">
            <div class="font-weight-bold">会員ID　　　　　　</div>
            <%= @customer.id %>
        </div>
        <div class="row m-3">
            <div class="font-weight-bold">氏名　　　　　　　</div>
            <%= @customer.first_name + @customer.last_name %>
        </div>
        <div class="row m-3">
            <div class="font-weight-bold">フリガナ　　　　　</div>
                <%= @customer.first_name_kana + @customer.last_name_kana %>
        </div>
        <div class="row m-3">
            <div class="font-weight-bold">郵便番号　　　　　</div>
                <%= @customer.postal_code %>
        </div>
        <div class="row m-3">
            <div class="font-weight-bold">住所　　　　　　　</div>
                <%= @customer.address %>
        </div>
        <div class="row m-3">
            <div class="font-weight-bold">電話番号　　　　　</div>
                <%= @customer.telephone_number %>
        </div>
        <div class="row m-3">
            <div class="font-weight-bold">メールアドレス　　</div>
                <%= @customer.email %>
        </div>
        <div class="row m-3">
            <div class="font-weight-bold">会員ステータス　　</div>
                <% if @customer.is_deleted == false %>
                <div class="validity">
                    <td>有効</td>
                </div>
                <% else %>
                <div class="withdraw">
                    <td >退会</td>
                </div>
    　　          <% end %>
        </div>
</div>

<div style="text-align: left"  class="customer_show_btn">
                <%= link_to '編集する', edit_admin_customer_path(@customer.id),  class: "btn btn-success mr-5" %>
            
                <%= link_to '注文履歴一覧を見る', admin_order_index_path(@customer.id),  class: "btn btn-primary ml-3" %>
</div>