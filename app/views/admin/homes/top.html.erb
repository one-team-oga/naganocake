<div class="ml-2">
    <div class="page_title mb-3 pl-3 pr-3">
        注文履歴一覧
    </div>
</div>

<div class="container">
<table class="table" border="2" rules="rows" frame="hsides" bordercolor="silver">
    <thead bgcolor="#DDDDDD">
        <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
        </tr>
    </thead>
    
    <tbody>
        <% @orders.each do |order| %>
            <tr>
                <td>
                 <%= link_to admin_order_path(order.id) do %>
                    <%= l order.created_at %>
                 <% end %>
                </td>
                <td><%= order.customer.first_name + order.customer.last_name %></td>
                <td><%= order.ordering_details.sum(:amount) %></td>
                <td><%= order.order_status_i18n %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= paginate @orders, theme: 'bootstrap-5' %>
</div>