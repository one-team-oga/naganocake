<%= render "admin/shared/links" %>

<div class="container mt-5">
  <div class="login mb-3">
    <div class="font_title pr-3 pl-3">
        管理者ログイン
    </div>
  </div>

　<div style="text-align: center" style="width:600px;">
    <%= form_with model: @admin, url: session_path(resource_name) do |f| %>
      <div class="form-group mt-3">
        <%= f.label :email, "メールアドレス　　  " %>
        <%= f.email_field :email, :size=>"40", autofocus: true, autocomplete: "email", class: "ml-4" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード　　　　  " %>
        <%= f.password_field :password, :size=>"40", autocomplete: "current-password", class: "ml-4" %>
      </div>
  </div>
      <div style="text-align: center"  class="actions">
        <%= f.submit "　　ログイン　　", class: "btn btn-sm btn-primary mr-5" %>
      </div>
    <% end %>
  

