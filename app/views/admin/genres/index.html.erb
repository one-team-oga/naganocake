<h4>ジャンル一覧・追加</h4>

<form>
    <div class="form-inline d-flex justify-content-center">
        <%= form_with model:@genre, url:admin_genres_path, local: true do |f| %>
            ジャンル名
            <%= f.text_field :name %>
            <%= f.submit '新規登録',class: "btn btn-success" %>
        <% end %>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>ジャンル</th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
        <% @genres.each do |genre| %>
        <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
        <% end %>
        </tr>
    </tbody>
</table>