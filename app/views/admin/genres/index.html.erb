<div class="page_title mb-3">
    <div class="font_title mb-4 pr-3 pl-3">
        ジャンル一覧・追加
    </div>
</div>

<div class="form-group　d-flex">
        <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
            <%= f.label :ジャンル名, class: "m-5" %>
            <%= f.text_field :name, class: "genre-form" %>
            <%= f.submit '新規登録',class: "btn btn-success ml-5" %>
        <% end %>
</div>

<div class="container m-10">
<table class="table">
    <thead  bgcolor="#DDDDDD">
        <tr align="center">
            <th>ジャンル</th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
        <% @genres.each do |genre| %>
        <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
        </tr>
        <% end %>
    </tbody>
</table>
</div>