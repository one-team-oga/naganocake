<div class="title"> 
    <h4 class="genres-index-title">ジャンル一覧・追加</h4>
</div>

<div class="form-group mx-auto">
        <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
            <%= f.label :ジャンル名, class: "genre-form" %>
            <%= f.text_field :name, class: "genre-form" %>
            <%= f.submit '新規登録',class: "btn btn-success genre-form" %>
        <% end %>
</div>

<div class="genre-index">
<table class="table">
    <thead  bgcolor="#DDDDDD">
        <tr align="center">
            <th>ジャンル</th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
        <% @genres.each do |genre| %>
        <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
        <% end %>
        </tr>
    </tbody>
</table>
</div>
