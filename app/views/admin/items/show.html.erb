<h4>商品詳細</h4>

<div class="container">
    <div class="row">
        <div class="col-4">
            <% if @item.image.attached? %>
                <%= image_tag @item.image, size: "200x200" %>
            <% else %>
                <%= image_tag 'no_image', size: "200x200" %>
            <% end %>
        </div>
        <div class="col-8 mr-3">
            <div class="">
                商品名
                <%= @item.name %>
            </div>
            <div class="">
                商品説明
                <%= @item.introduction %>
            </div>
            <div class="">
                ジャンル
                <%= @item.genre.name %>
            </div>
            <div class="">
                税込価格（税抜価格）
                <%= @item.price.to_s(:delimited) %> (<%= @item.add_tax_price.to_s(:delimited) %>)円
            </div>
            <div class="">
                販売ステータス
                <%= @is_active %>
            </div>
            <div class="">
                <%= link_to '編集する', edit_admin_item_path(@item.id),  class: "btn btn-success" %>
            </div>
        </div>
    </div>
</div>