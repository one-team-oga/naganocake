<h4>商品新規登録</h4>

<div class="form-inline d-flex justify-content-center" >
<%= form_with model:@item, url: admin_items_path, method: :post, local: true do |f| %>
    <div class="form-group m-3">
        <label class="col-sm-3">商品画像</label>
        <div class="col-sm-9">
            <%= f.file_field :image,  accept: "image/*" %> 
        </div>
    </div>
    
    <div class="form-group m-3">
        <label class="col-sm-3">商品名</label>
        <div class="col-sm-9">
            <%= f.text_field :name %> 
        </div>
    </div>
    
    <div class="form-group m-3">
        <label class="col-sm-3">商品説明</label>
        <div class="col-sm-9">
            <%= f.text_area :introduction %> 
        </div>
    </div>
    
    <div class="form-group m-3">
        <label class="col-sm-3">ジャンル</label>
        <div class="col-sm-9">
              <%= f.select :genre_id, @genres.map{ |genre| [genre.name, genre.id] }, include_blank: '選択してください' %>
        </div>
    </div>
    
    <div class="form-group m-3">
        <label class="col-sm-3">税抜価格</label>
        <div class="col-sm-9">
            <%= f.text_field :price %> 円
        </div>
    </div>
    
    <div class="form-group m-3">
        <label class="col-sm-3">販売ステータス</label>
        <div class="col-sm-9">
            
        </div>
    </div>
    
        <%= f.submit '新規登録',class: "btn btn-success" %>
        
<% end %>
</div>
    