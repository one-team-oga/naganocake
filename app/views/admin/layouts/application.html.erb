<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="border-bottom border-dark">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-1 border border-dark m-3" href="/"><%= image_tag 'logo.png' %></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if admin_signed_in? %>
            <li class="nav-item border border-gray rounded mr-3">
              <%= link_to "商品一覧", admin_items_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item border border-gray rounded mr-3">
              <%= link_to "会員一覧",admin_customers_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item border border-gray rounded mr-3">
              <%= link_to "注文履歴一覧", admin_root_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item border border-gray rounded  mr-3" >
              <%= link_to 'ジャンル一覧', admin_genres_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item border border-gray rounded">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' %>
            </li>
            <% else %>
            <li class="nav-item border border-gray rounded  mr-3" >
              <%= link_to 'About', about_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item border border-gray rounded  mr-3" >
              <%= link_to '商品一覧', admin_items_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item border border-gray rounded mr-3">
              <%= link_to "新規登録", new_customer_registration_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item border border-gray rounded">
              <%= link_to "ログイン", new_admin_session_path, class: 'nav-link text-dark' %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <%= yield %>
    </main>
    <footer class="bg-white border-top border-dark pt-5 pb-4" >
      <div class="container">
        
      </div>
    </footer>
    
</html>
