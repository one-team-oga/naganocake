<div class="page_title mb-3">
    <div class="font_title mb-4">
        注文履歴一覧
    </div>
</div>

<div class="container m-10">
<table class="m-5" border="1" width="1000">
    <thead bgcolor="#DDDDDD">
        <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払い金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
        </tr>
    </thead>
    
    <tbody>
        <% @orders.each do |order| %>
            <tr>
                <td><%=  order.created_at.strftime('%Y/%m/%d') %></td>
                <td>
                    〒<%= order.delivery_postal_code %></br> 
                    <%= order.delivery_address %></br>
                    <%= order.delivery_name %>
                </td>
                <td><% order.ordering_details.each do |ordering_detail| %>
                        <%= ordering_detail.item.name %></br>
                    <% end %>
                </td>
                <td><%= (@total + 800).to_s(:delimited) %></td>
                <td><%= order.order_status_i18n %></td>
                <td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary ml-3" %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= paginate  @orders %>
</div>