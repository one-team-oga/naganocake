<div class="page_title mb-3">
    <div class="font_title mb-4 pr-3 pl-3">
        注文情報確認
    </div>
</div>

<div class="container m-10">
<table border="1" width="1000">
    <thead  bgcolor="silver">
        <tr>
            <th>商品名</th>
            <th>単価(税込）</th>
            <th>数量</th>
            <th>小計</th>
        </tr>
    </thead>
    <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
            <td>
                <%= cart_item.item.name %>
            </td>
            <td><%= (cart_item.item.add_tax_price).floor.to_s(:delimited) %></td>
            <td><%= cart_item.amount %></td>
            <td><%= (cart_item.subtotal).to_s(:delimited) %></td>
        </tr>
        <% end %>
        
    </tbody>
</table>

<div class="row mt-3">
<table border="1" width="200" class="">
    <tr>
        <th bgcolor="silver">合計金額</th>
        <td></td>
    </tr>
    <tr>
      <th>請求金額</th>
      <td></td>
    </tr>
</table>
</div>
</div>


<div class="container mt-3 d-flex align-items-center">
    <div class="row">
    <%= link_to "情報入力画面に進む", new_order_path, class: "btn btn-success" %>
    </div>
</div>
