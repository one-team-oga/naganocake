<div class="m-3">
    注文情報入力
</div>

    <%= form_with model: @order, url: orders_confirm_path, method: :post, local: true do |f| %>
    <h5>支払い方法</h5>
        <%= f.radio_button :payment, Order.payments.key(0) %>
        <%= f.label :payment, Order.payments_i18n[:credit] %>

        <%= f.radio_button :payment, Order.payments.key(1) %>
        <%= f.label :payment, Order.payments_i18n[:bank]%>
    <h5>お届け先</h5>
        <%= f.radio_button :addrsess_number, 1 %>
        <%= f.label :addrsess_number_1, "ご自身の住所" %></br>
        <%= "　" + "〒" + current_customer.address %></br>
        <%= "　" + current_customer.first_name + current_customer.last_name %></br>
        
        <%= f.radio_button :addrsess_number, 2 %>
        <%= f.label :addrsess_number_2, "登録済み住所から選択" %></br>
        <%= f.select :delivery_address, options_from_collection_for_select(Address.all, :id, :address_display) %></br>
        
        <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
    
    <% end %>