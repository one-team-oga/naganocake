<div class="page_title mb-3">
    <div class="font_title mb-4 pr-3 pl-3">
        注文情報入力
    </div>
</div>

<div class="container m-3">
    <div class="row m-3">
    <%= form_with model: @order, url: orders_confirm_path, local: true do |f| %>

        <div class="font-weight-bold">　　支払い方法　　　　　　</div>
        <%= f.radio_button :payment, Order.payments.key(0) %>
        <%= f.label :payment, Order.payments_i18n[:credit] %>

        <%= f.radio_button :payment, Order.payments.key(1) %>
        <%= f.label :payment, Order.payments_i18n[:bank]%>
        
        <div class="font-weight-bold">　　お届け先　　</div>
        <%= f.radio_button :address_number, 0 %>
        <%= f.label :addrsess_number_0, "ご自身の住所" %></br>
        <%= "　" + "〒" + current_customer.address %></br>
        <%= "　" + current_customer.first_name + current_customer.last_name %></br>
        <%= f.radio_button :address_number, 1 %>
        <%= f.label :addrsess_number_1, "登録済み住所から選択" %></br>
        <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %></br>
        <%= f.radio_button :address_number, 2 %>
        <%= f.label :addrsess_number_2, "新しいお届け先" %></br>
        <%= f.label :delivery_postal_code, "郵便番号（ハイフンなし）" %>
        <%= f.number_field :delivery_postal_code %></br>
        <%= f.label :delivery_address, "住所" %>
        <%= f.text_field :delivery_address %></br>
        <%= f.label :delivery_name, "宛名" %>
        <%= f.text_field :delivery_name %></br>

        <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
    <% end %>
</div>