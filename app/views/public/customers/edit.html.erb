<div class="conatiner">
    <div class="page_title mb-3 d-inline-block">
        <div class="font_title pr-3 pl-3">
           <p>会員情報編集</p>
    </div>
    <% if @customer.errors.any? %>
        <%= @customer.errors.count %>件のエラーメッセージが発生しました
          <ul>
            <% @customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
            <% end %>
          </ul>
    <% end %>
</div>

<div class="container">
<div class="form-group">
<%= form_with model: @customer, url: information_update_path, method: :patch, local: true do |f| %>
    <div class="container m-5">
      <div class="form-group">
        <%= f.label :first_name, "氏名　　　　　　　" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        <%= f.text_field :last_name, autocomplete: "last_name" %>
      </div>
  
      <div class="form-group">
        <%= f.label :first_name_kana, "フリガナ　　　　　" %>
        <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
        <%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
      </div>

      <div class="form-group">
        <%= f.label :postal_code, "郵便番号　　　　　" %>
        <%= f.number_field :postal_code, autocomplete: "postal_code" %>
      </div>
  
      <div class="form-group">
        <%= f.label :address, "住所　　　　　　　" %>
        <%= f.text_field :address,autocomplete: "address" %>
      </div>
  
      <div class="form-group">
        <%= f.label :telephone_number, "電話番号　　　　　" %>
        <%= f.number_field :telephone_number, autocomplete: "telephone_number" %>
      </div>
      
      <div class="form-group">
        <%= f.label :email, "メールアドレス　　" %>
        <%= f.email_field :email, autocomplete: "email" %>
      </div>
      
      <div>
        <%= f.submit "　　編集内容を保存　　", class: "btn btn-success mr-5 ml-5" %>
        <%= link_to "　退会する　", customers_unsubcribe_path, class: "btn btn-danger ml-5" %>
      </div>
  　</div>

    
    <% end %>
</div>
</div>