
<div class="container m-5">
    <div class="row">
        <div class="col-sm-2">
            ジャンル検索</br>
            ケーキ</br>
            焼き菓子</br>
            プリン</br>
            キャンディ</br>
        </div>
        <div class="col-sm-8">
            <div class="col-sm-3">
                <% if @item.image.attached? %>
                    <%= image_tag @item.image, size: "200x200" %>
                <% else %>
                    <%= image_tag 'no_image', size: "200x200" %>
                <% end %>
            </div>
            <div class="col-sm-5">
                <h2><%= @item.name %></h2>
                <p><%= @item.introduction %></p>
                <h4>¥<%= @item.add_tax_price.to_s(:delimited) %>（税込）</h4>
            </div>
        </div>
        <div class="col-sm-2">
            
        </div>
    </div>
</div>